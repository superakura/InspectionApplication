<body>
    <div class="container">
        <form class="form-signin" action="/Home/Login" method="post" role="form">
            <h2 class="form-signin-heading">原辅料网上报检平台</h2>
            <hr />
            <label for="inputEmail">员工编号（例如：00099999）</label>
            <input name="userID" type="text" id="userID" value="00099666" class="form-control" placeholder="请输入员工编号" required="" autofocus="" />
            <br />
            <label for="inputPassword">考勤系统密码</label>
            <input name="pwd" type="password" id="pwd" value="xx" class="form-control" placeholder="请输入考勤系统密码" required="" />
            <input type="submit" name="btnLogin" value="登录" id="btnLogin" class="btn btn-lg btn-primary btn-block" />
            @Html.ValidationSummary()
        </form>
