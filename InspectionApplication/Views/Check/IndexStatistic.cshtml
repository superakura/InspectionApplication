
@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<h2>报检单统计</h2>
<div class="row">
    <div class="col-lg-12 form-inline">
        <div class="form-group">
            <label for="form-group-input">接收开始日期</label>
            <input class="form-control" readonly id="tbxArriveStart" type="text" />
        </div>
        <div class="form-group">
            <label for="form-group-input">接收结束日期</label>
            <input class="form-control" readonly id="tbxArriveEnd" type="text" />
        </div>
        <button type="button" class="btn btn-success" id="btnSearch"><span class="glyphicon glyphicon-search"></span> 查询</button>
        <button type="button" class="btn btn-default" id="btnToExcel"><span class="glyphicon glyphicon-floppy-save"></span> 导出到Excel</button>
    </div>
</div>
<script>
    //初始化日期控件
    $("#tbxArriveStart,#tbxArriveEnd").datetimepicker({
        language: 'zh-CN',
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        minView: 2,
        forceParse: 0,
        format: 'yyyy-mm-dd'
    });
</script>
